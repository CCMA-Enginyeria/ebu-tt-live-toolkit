<?xml version="1.0" ?>
<tt:tt
        ebuttp:sequenceIdentifier="testSequence001"
        ebuttp:sequenceNumber="1"
        ttp:timeBase="{{ time_base }}"
{% if timebase == 'smpte' %}
        ttp:frameRate="25"
{% endif %}
{% if time_base == 'clock' %}
        ttp:clockMode='local'
{% endif %}
        xml:lang="en-GB"
        xmlns:ebuttm="urn:ebu:tt:metadata"
        xmlns:ebuttp="urn:ebu:tt:parameters"
        xmlns:tt="http://www.w3.org/ns/ttml"
        xmlns:ttp="http://www.w3.org/ns/ttml#parameter"
        xmlns:xml="http://www.w3.org/XML/1998/namespace">
  <tt:head>
    <tt:metadata>
      <ebuttm:documentMetadata/>
    </tt:metadata>
    <tt:styling>
      <tt:style xml:id="ID001"/>
    </tt:styling>
    <tt:layout/>
  </tt:head>
  <tt:body 
{% if body_begin %}
        tt:begin="{{ body_begin }}"
{% endif %}
{% if body_end %}
        tt:end="{{ body_end }}"
{% endif %}
{% if body_dur %}
        tt:dur="{{ body_dur }}"
{% endif %}
    >
    <tt:div>
      <tt:p
{% if p_begin %}
            tt:begin="{{ p_begin }}"
{% endif %}
{% if p_end %}
            tt:end="{{ p_end }}"
{% endif %}
            xml:id="ID005">
            <tt:span
{% if span_begin %}
                tt:begin="{{ span_begin }}"
{% endif %}
{% if span_end %}
                tt:end="{{ span_end }}"
{% endif %}
            >
              Some example text...
            </tt:span>
        <tt:br/>
        <tt:span>And another line</tt:span>
      </tt:p>
    </tt:div>
  </tt:body>
</tt:tt>
